pipeline {
    agent none  // Tidak ada agen default di tingkat pipeline
    
    stages {
        stage('Build') {
            agent {
                dockerfile true
                args '-f Dockerfile.node'  // Gunakan Dockerfile.node untuk build stage
            }
            steps {
                sh '''
                    node --version
                    git --version
                '''
            }
        }
        
        stage('Test') {
            agent {
                dockerfile true
                args '-f Dockerfile.node'  // Gunakan Dockerfile.node untuk build stage
            }
            steps {
                sh '''
                    curl --version
                    npm --version
                '''
            }
        }
    }
}
